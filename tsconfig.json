{
    "compilerOptions": {
      "target": "es5",
      "module": "CommonJS",
      "declaration": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "sourceMap": true,
      "lib": [
        "ES2015"
      ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "tests", "dist"]
  }